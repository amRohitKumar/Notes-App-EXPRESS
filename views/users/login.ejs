<% layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-4 offset-4 my-4">
        <div class="mb-2" style="text-align: center;">
            <h1 >Sign-In</h1>
        </div>
        <form action="/login" method="POST" novalidate class="validated-form">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">@</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" required name="username">
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password: </label>
                <input id="password" class="form-control" type="password" placeholder="Password..." name="password" required>
                <div class="valid-feedback">
                    Looks Good !
                </div>
            </div>
            <div class="mb-3" style="display: flex; justify-content: center;">
                <button class="btn btn-success">Submit</button>
            </div>
            <label for="loginlink">New user </label>
            <a href="/register" id="loginlink">Sign-Up</a>
        </form>
    </div>
</div>