<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-4 offset-4 my-4">
            <div class="mb-2" style="text-align: center;">
                <h1>Sign-Up</h1>
            </div>
            <% if(error.length != 0){ %> 
                <div class="mb-2" style="text-align: center;">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %> 
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            <% } %> 

            <form action="/register" method="POST" novalidate class="validated-form">

                <div class="mb-3">
                    <label class="form-label" for="name">Name: </label>
                    <input id="name" class="form-control" type="text" placeholder="Name..." name="name" required>
                    <div class="valid-feedback">
                        Looks Good !
                    </div>
                </div>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">@</span>
                    <input name="username" type="text" class="form-control" placeholder="Username" aria-label="Username"
                        aria-describedby="basic-addon1" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email: </label>
                    <input id="email" class="form-control" type="email" placeholder="Email..." name="email" required>
                    <div class="valid-feedback">
                        Looks Good !
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password: </label>
                    <input id="password" class="form-control" type="password" placeholder="Password..." name="password"
                        required>
                    <div class="valid-feedback">
                        Looks Good !
                    </div>
                </div>
                <div class="mb-3" style="display: flex; justify-content: center;">
                    <button class="btn btn-success">Submit</button>
                </div>
                <label for="loginlink">Already an user </label>
                <a href="/login" id="loginlink">Sign-In</a>
            </form>
        </div>
    </div>