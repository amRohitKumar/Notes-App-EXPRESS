<% layout('layouts/boilerplate') %> 
<link rel="stylesheet" href="/stylesheet/homePage.css">
<div class="container">
    <% if(success.length != 0){ %> 
        <div class="mb-1 row flashdiv" style="text-align: center;">
            <div class="alert alert-success alert-dismissible fade show customalert col-8 offset-2" role="alert">
                <%= success %> 
                <button type="button" class="btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    <% } %> 
    <!-- DIV FOR NEW NOTE FORM -->
    <div class="row mt-1">
        <div class="col-6 offset-3">
            <form action="/notes/<%=userId%>" method="POST" novalidate class="validated-form" >
                <div class="mb-1">
                    <label class="form-label" for="title">Title: </label>
                    <input id="title" class="form-control" type="text" placeholder="Title..." name="title" required>
                </div>
                <div class="mb-1">
                    <label class="form-label" for="note">Email: </label>
                    <input id="note" class="form-control" type="text" placeholder="Note..." name="note" >
                    <!-- <div class="valid-feedback">
                        Looks Good !
                    </div> -->
                </div>
                <div class="mb-3" style="display: flex; justify-content: center;">
                    <button class="btn btn-secondary">Add Note</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row mt-2">
        <% for(let note of user.notes){ %> 
            <div class="row my-2 notediv col-6 offset-3">
                <div class=" titlediv"><strong><%= note.title %> </strong> </div>
                <div class=" bodydiv"><%= note.body %> </div>
            </div>
        <% } %> 
    </div>
</div>